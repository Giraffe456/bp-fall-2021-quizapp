<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizQuestionActivity">

    <TextView
            android:layout_width="293dp"
            android:layout_height="73dp" android:id="@+id/question1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.34"/>
    <RadioButton
            android:text="Question 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/question1"/>
    <RadioButton
            android:text="Question 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <RadioButton
            android:text="Question 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton4"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <RadioButton
            android:text="Question 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="322dp"
            android:layout_height="59dp"
            android:id="@+id/progressBar2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/question1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Submit"
            android:layout_width="109dp"
            android:layout_height="44dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.199"/>
</androidx.constraintlayout.widget.ConstraintLayout>